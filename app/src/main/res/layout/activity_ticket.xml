<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AC58FA"
    android:orientation="vertical"
    tools:context=".Ticket">

    <Button
        android:id="@+id/buyyyy"
        android:layout_width="179dp"
        android:layout_height="113dp"
        android:layout_marginStart="80dp"

        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fare" />

    <TextView
        android:id="@+id/route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="10dp"
        android:background="#E0F2F7"
        android:fontFamily="@font/caudex_bold"
        android:text="Route: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/fare"
        app:layout_constraintEnd_toStartOf="@+id/buyyyy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busno" />

    <TextView
        android:id="@+id/fare"
        android:layout_width="171dp"
        android:layout_height="74dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="247dp"
        android:background="@drawable/dess"
        android:fontFamily="@font/inknut_antiqua_light"
        android:paddingStart="50dp"
        android:paddingEnd="15dp"
        android:text="Total Fare: "
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buyyyy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/busno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="364dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:background="#E0F2F7"
        android:fontFamily="@font/amaranth"
        android:text="Bus no."
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/route"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>